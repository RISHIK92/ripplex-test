{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler", // or "node"
    "target": "ES2020",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["src"], // ðŸ‘ˆ only compile src
  "exclude": ["tests", "vite.config.ts"]
}
